{
	"name": "blog",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"build": "tsx scripts/generate-blog-data.ts && pnpm panda codegen && pnpm panda cssgen && tsx scripts/render-static-pages.ts && SITE_URL=${SITE_URL:-https://nick.karnik.io} tsx scripts/make-sitemap.ts && SITE_URL=${SITE_URL:-https://nick.karnik.io} tsx scripts/generate-robots.ts && tsx scripts/generate-redirects.ts && tsx scripts/generate-redirect-html.ts",
		"build:prod": "NODE_ENV=production pnpm build",
		"preview": "pnpm build:prod && vite preview --host --port 5173",
		"dev": "tsx scripts/generate-blog-data.ts && NODE_ENV=${NODE_ENV:-development} pnpm build && vite --host",
		"test": "vitest run --coverage",
		"test:watch": "vitest --watch --coverage",
		"test:unit": "vitest run --coverage",
		"test:integration": "vitest run --coverage src/__tests__/*.integration.test.tsx",
		"test:e2e": "vitest run --config vitest.e2e.config.ts",
		"test:e2e:dev": "concurrently \"pnpm dev\" \"vitest run --config vitest.e2e.config.ts\"",
		"test:e2e:dev:port": "E2E_DEV_SERVER_PORT=5173 concurrently \"pnpm dev\" \"vitest run --config vitest.e2e.config.ts\"",
		"test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e:dev",
		"test:links": "npx linkinator https://nick.karnik.io --recurse --skip 'linkedin.com' --skip 'geekwire.com'",
		"test:links:local": "npx serve dist -l 5173 & sleep 2 && npx linkinator http://localhost:5173 --recurse --skip 'linkedin.com' ; kill %1",
		"test:links:dist": "./scripts/test-links-dist.sh",
		"deploy": "./scripts/deploy.sh"
	},
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@heroicons/react": "^2.2.0",
		"@pandacss/dev": "^1.4.1",
		"@tanstack/react-router": "^1.132.21",
		"framer-motion": "^12.23.22",
		"marked": "^16.4.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-helmet-async": "^2.0.5",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0"
	},
	"devDependencies": {
		"@tanstack/router-plugin": "^1.132.21",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.3",
		"@vitejs/plugin-react-swc": "^4.1.0",
		"@vitest/coverage-v8": "^3.2.4",
		"concurrently": "^9.1.0",
		"jsdom": "^27.0.0",
		"tsx": "^4.20.6",
		"typescript": "~5.8.3",
		"vite": "^5.4.21",
		"vite-plugin-ssr-ssg": "^1.4.1",
		"vite-ssg": "^28.1.0",
		"viteFileRoutes": "link:@tanstack/router-plugin/viteFileRoutes",
		"vitest": "^3.2.4"
	}
}
