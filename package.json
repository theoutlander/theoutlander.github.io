{
	"name": "blog",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"preview": "vite preview",
		"prebuild": "tsx scripts/fetch-hashnode.ts",
		"build": "vite build",
		"postbuild": "SITE_URL=https://nick.karnik.io tsx scripts/make-sitemap.ts",
		"build:prod": "pnpm run prebuild && pnpm run build && pnpm run postbuild",
		"deploy": "pnpm run build:prod && echo 'Build complete! Deploy the dist/ folder to nick.karnik.io'",
		"typecheck": "tsc --noEmit",
		"dev:full": "pnpm run prebuild && pnpm run build && pnpm run dev",
		"commit:all": "git add . && git commit -m 'chore: update build and dev changes'",
		"dev:commit": "pnpm run prebuild && pnpm run build && pnpm run commit:all && pnpm run dev"
	},
	"dependencies": {
		"@chakra-ui/react": "^3.27.0",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@tanstack/react-router": "^1.132.21",
		"@tanstack/react-router-devtools": "^1.132.21",
		"framer-motion": "^12.23.22",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-helmet-async": "^2.0.5",
		"react-markdown": "^10.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@tanstack/router-plugin": "^1.132.21",
		"@types/node": "^24.5.2",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react": "^5.0.3",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.4.0",
		"graphql-request": "^7.2.0",
		"tsx": "^4.20.6",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.7",
		"vite-plugin-ssr-ssg": "^1.4.1",
		"vite-ssg": "^28.1.0",
		"viteFileRoutes": "link:@tanstack/router-plugin/viteFileRoutes"
	}
}
