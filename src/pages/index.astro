---
import { getPosts } from "../data/hashnode";
import sanitizeHtml from "sanitize-html";
const posts = await getPosts(24);
const TITLE = "Build Smarter with Nick Karnik";
const TAGLINE = "AI, engineering, and productivity.";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{TITLE}</title>
    <meta name="description" content={TAGLINE} />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <main class="container">
      <section class="hero">
        <h1>{TITLE}</h1>
        <p>{TAGLINE}</p>
      </section>

      <section class="list">
        {posts.map((p) => (
          <a href={`/p/${p.slug}/`} class="card">
            {p.coverImage?.url && <img src={p.coverImage.url} alt="" />}
            <h3>{p.title}</h3>
            <div class="meta">{new Date(p.publishedAt).toLocaleDateString()}</div>
            <p>{sanitizeHtml(p.brief || "", { allowedTags: [], allowedAttributes: {} })}</p>
          </a>
        ))}
      </section>

      <footer class="site-footer">
        <div class="top">
          <span>© {new Date().getFullYear()} Nick Karnik</span>
          <nav>
            <a href="/archive/">Archive</a>
            <a href="/privacy/">Privacy</a>
            <a href="/terms/">Terms</a>
          </nav>
        </div>
        <p class="footnote">
          Written by Nick Karnik · <a href="mailto:nick@karnik.io">nick@karnik.io</a>
        </p>
      </footer>
    </main>
  </body>
</html>
